generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?
  balance       Float     @default(100000) // Demo: 100k TL starting balance
  createdAt     DateTime  @default(now())
  
  portfolio     PortfolioItem[]
  transactions  Transaction[]
  notifications Notification[]
  favorites     String[]  @default([])
  limitOrders   LimitOrder[]
}

model LimitOrder {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  symbol      String
  quantity    Float?   // Optional: User specifies amount in Asset
  amount      Float?   // Optional: User specifies amount in Fiat (USD/TRY)
  targetPrice Float    // The price trigger
  type        String   // "BUY" | "SELL"
  status      String   @default("PENDING") // PENDING, COMPLETED, CANCELLED, FAILED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([status])
}

model PortfolioItem {
  id        String   @id @default(cuid())
  userId    String
  symbol    String
  quantity  Float
  avgCost   Float
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, symbol])
  @@index([userId])
}

model Transaction {
  id        String   @id @default(cuid())
  userId    String
  type      String
  symbol    String
  quantity  Float
  price     Float
  total     Float
  date      DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([symbol])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String
  read      Boolean  @default(false)
  date      DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
}
